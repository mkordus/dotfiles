nmap <space>p :action FindInPath<CR>
nmap <space>c :action ReformatCode<CR>
nmap <space>f :action GotoFile<CR>
nmap <space>g :action Generate<CR>
nmap <space>i :action ChooseRunConfiguration<CR>
nmap <space>m :action FileStructurePopup<CR>
nmap <space>r :action Refactorings.QuickListPopupAction<CR>
